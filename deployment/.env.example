# EEG Mental Health Assistant - Environment Configuration
# Copy this file to .env and update with your values

#############################################################################
# CORE CONFIGURATION
#############################################################################

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=change-this-to-a-secure-random-32-byte-string-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

#############################################################################
# DATABASE CONFIGURATION  
#############################################################################

# PostgreSQL
POSTGRES_DB=eeg_mental_health
POSTGRES_USER=eeg_user
POSTGRES_PASSWORD=secure_database_password_change_me

# Database URL (adjust host for different deployments)
DATABASE_URL=postgresql://eeg_user:secure_database_password_change_me@postgres:5432/eeg_mental_health

#############################################################################
# REDIS CONFIGURATION
#############################################################################

REDIS_PASSWORD=redis_password_change_me
REDIS_URL=redis://:redis_password_change_me@redis:6379/0

#############################################################################
# EXTERNAL API KEYS
#############################################################################

# OpenAI (for chatbot)
OPENAI_API_KEY=your_openai_api_key_here

# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email Notifications (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key_here

#############################################################################
# CLOUD STORAGE (Production)
#############################################################################

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET=eeg-mental-health-files

#############################################################################
# MONITORING AND LOGGING
#############################################################################

# Error Tracking (Sentry)
SENTRY_DSN=your_sentry_dsn_here

# Grafana
GRAFANA_PASSWORD=grafana_admin_password_change_me

#############################################################################
# SECURITY AND RATE LIMITING
#############################################################################

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

#############################################################################
# ML MODEL CONFIGURATION
#############################################################################

# Model Paths
MODEL_BASE_PATH=ml_models/saved_models
EEG_MODEL_PATH=ml_models/saved_models/eeg_cnn_lstm.pth
TEXT_MODEL_PATH=ml_models/saved_models/roberta_depression

# EEG Processing Defaults
DEFAULT_SAMPLING_RATE=128
DEFAULT_EPOCH_LENGTH=2.0
DEFAULT_OVERLAP=0.5

#############################################################################
# PRODUCTION OVERRIDES
#############################################################################

# For production deployment, set these:
# ENVIRONMENT=production
# DEBUG=false
# DATABASE_URL=postgresql://user:password@prod-db-host:5432/database
# REDIS_URL=redis://user:password@prod-redis-host:6379/0
# Update all API keys with production values